@model BugTracker.Models.DBClasses.Application
@{
    ViewBag.Title = "Новая заявка";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary" style="margin-top: 70px;">
    <div class="panel-heading  form-heading-text">
        <i class="fa fa-plus-square fa-fw" aria-hidden="true"></i>&nbsp;&nbsp;Введите данные заявки
    </div>
    <div class="panel-body form-container">
        @using (Html.BeginForm("CreateClaim", "Manage", FormMethod.Post, new { id = "registrationForm", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="inputCaption" class="col-sm-2 control-label">Тема</label>
                <div class="col-sm-10">
                    @Html.EditorFor(m => m.caption, new { id= "inputCaption", @class = "form-control", placeholder = "Тема" })
                    @Html.ValidationMessageFor(m => m.caption)
                </div>
            </div>
            <div class="form-group">
                <label for="inputType" class="col-sm-2 control-label">Тип</label>
                <div class="col-sm-10">
                    @Html.EditorFor(m => m.type, new { id = "inputType", @class = "form-control", placeholder = "Тип" })
                    @Html.ValidationMessageFor(m => m.type)
                </div>
            </div>
            <div class="form-group">
                <label for="inputPriority" class="col-sm-2 control-label">Приоритет</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.priority, selectList: new SelectList(new string[] {"низкий", "средний", "высокий", "срочный"}), htmlAttributes: new { id = "inputPriority", @class = "form-control", placeholder = "Приоритет" })
                    @Html.ValidationMessageFor(m => m.priority)
                </div>
            </div>
            <div class="form-group">
                <label for="inputAnnotation" class="col-sm-2 control-label">Комментарий</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.annotation, htmlAttributes: new { id = "inputAnnotation", @class = "form-control", placeholder = "Введите Ваш комментарий" })
                    @Html.ValidationMessageFor(m => m.annotation)
                </div>
            </div>
        }
        </div>
</div>
